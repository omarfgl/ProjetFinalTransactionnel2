@model ProjetFinalTrans2.Models.Realisation

<h2>Supprimer la réalisation</h2>

<div class="alert alert-warning">
    <p>Es-tu sûr de vouloir supprimer <strong>@Model.Titre</strong> ?</p>
</div>

<div class="card">
    <img src="@Model.ImageUrl" alt="@Model.Titre" class="card-img-top" style="max-height: 300px;" />
    <div class="card-body">
        <p><strong>Catégorie :</strong> @Model.Categorie</p>
        <p><strong>Description :</strong> @Model.Description</p>
        <p><strong>Prix :</strong> @Model.Prix €</p>
    </div>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger mt-3">Oui, supprimer</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary mt-3">Annuler</a>
</form>
