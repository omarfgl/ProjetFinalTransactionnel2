@model ProjetFinalTrans2.Models.Realisation

<h2>Ajouter une réalisation</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Titre"></label>
        <input asp-for="Titre" class="form-control" />
        <span asp-validation-for="Titre" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Categorie"></label>
        <input asp-for="Categorie" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ImageUrl"></label>
        <input asp-for="ImageUrl" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Prix"></label>
        <input asp-for="Prix" class="form-control" />
        <span asp-validation-for="Prix" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Ajouter</button>
</form>
