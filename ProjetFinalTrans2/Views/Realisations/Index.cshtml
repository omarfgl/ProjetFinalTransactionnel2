@model IEnumerable<ProjetFinalTrans2.Models.Realisation>

<h2 class="text-center my-4">Nos réalisations</h2>

<div class="container">
    <div class="d-flex justify-content-end mb-3">
        <a href="@Url.Action("Create")" class="btn btn-success">➕ Ajouter une réalisation</a>
    </div>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow">
                    <img src="@item.ImageUrl" class="card-img-top" alt="@item.Titre" style="height: 250px; object-fit: cover;">
                    <div class="card-body">
                        <h5 class="card-title">@item.Titre</h5>
                        <p class="card-text text-muted">@item.Categorie</p>
                        <p class="card-text fw-bold">@item.Prix €</p>
                        <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-outline-primary btn-sm">Voir détails</a>
                        <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-warning btn-sm ms-2">Modifier</a>
                        <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-danger btn-sm ms-2">Supprimer</a>

                    </div>
                </div>
            </div>
        }
    </div>
</div>
